            <Template Context="_courseRepository">
                <RadzenImage Path="@_courseRepository.ImageUrl" class="rz-gravatar" AlternateText="@(_courseRepository.Name)" />
            </Template>
        </RadzenDataGridColumn> *@
        <RadzenDataGridColumn TItem="CourseDto" Property="Name" Title="Name" Frozen="true" Width="160px" />
        <RadzenDataGridColumn TItem="CourseDto" Property="CoursePrice" Title="CoursePrice" Width="160px" />
        <RadzenDataGridColumn TItem="CourseDto" Property="Description" Title="Description" Width="200px" />
        <RadzenDataGridColumn TItem="CourseDto" Property="Title" Title="Title" Width="120px" />
        <RadzenDataGridColumn TItem="CourseDto" Property="IsActive" Title="IsActive" FormatString="{0:d}" Width="160px" />
        
   
    </Columns>
</RadzenDataGrid>

