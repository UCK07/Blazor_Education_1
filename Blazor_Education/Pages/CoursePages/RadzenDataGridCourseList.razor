@page "/radzencourselist"
@using global::Shared.Dto;


<div class="row mt-4">

    <div class="col-3">

        <h5>Course List</h5>
        <br />
        <NavLink href="/createorupdate" class="btn btn-success">Course Add</NavLink>
    </div>


</div>

